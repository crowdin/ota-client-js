{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "target": "es2019",
        "outDir": "./out",
        "lib": [
            "es2021"
        ],
        "strict": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "tests"
    ],
    "typedocOptions": {
        "entryPoints": ["src/index.ts"],
        "excludeInternal": true,
        "excludeProtected": true,
        "excludeExternals": true,
        "excludePrivate": true,
        "hideGenerator": true,
        "readme": "none",
        "categoryOrder": ["Strings Management", "Content Management", "Helpers"]
    }
}
