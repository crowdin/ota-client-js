{
  "name": "@crowdin/ota-client",
  "version": "1.0.0",
  "description": "JavaScript library for Crowdin OTA Content Delivery",
  "main": "out/index.js",
  "types": "out/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/crowdin/ota-client-js.git"
  },
  "files": [
    "out/**/*"
  ],
  "scripts": {
    "test": "jest",
    "build": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint --fix \"{src,tests}/**/*.{js,ts}\"",
    "lint-ci": "eslint \"{src,tests}/**/*.{js,ts}\"",
    "test-coverage": "jest --ci --reporters=jest-junit --reporters=default --coverage --coverageReporters=cobertura --coverageReporters=html",
    "prepare": "husky install"
  },
  "keywords": [
    "Crowdin",
    "Over-The-Air",
    "Content Delivery"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^27.0.0",
    "@types/nock": "^10.0.3",
    "@types/node": "^12.0.10",
    "@typescript-eslint/eslint-plugin": "^2.3.1",
    "@typescript-eslint/parser": "^2.3.1",
    "eslint": "^6.4.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^7.0.0",
    "jest": "^27.0.0",
    "jest-circus": "^27.0.0",
    "jest-junit": "^15.0.0",
    "lint-staged": ">=8",
    "nock": "^10.0.6",
    "prettier": "^1.18.2",
    "ts-jest": "^27.0.0",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "axios": "^1"
  },
  "bugs": {
    "url": "https://github.com/crowdin/ota-client-js/issues"
  },
  "homepage": "https://github.com/crowdin/ota-client-js#readme",
  "directories": {
    "test": "tests"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
